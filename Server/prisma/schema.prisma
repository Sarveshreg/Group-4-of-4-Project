generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           String    @id @default(uuid())
  FirstName    String
  LastName     String
  Email        String    @unique
  Password     String
  ZipCode      Int
  ProfilePic   String?  
  EventCreated Event[]   @relation("creator")
  comment      Comment[]
  RSVPEvents   RSVP[]
}

model Event {
  id               String    @id @default(uuid())
  category         Category?
  Date             DateTime
  Street           String
  City             String
  State            String
  ZipCode          Int
  EventTitle       String
  Details          String    @db.Text
  MaximumAttendies Int
  Picture          String
  EventCreated     DateTime  @default(now())
  EventUpdated     DateTime  @updatedAt
  Creator          Users     @relation("creator", fields: [CreatorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  CreatorId        String
  CreatorName      String
  CreatorEmail     String
  Comment          Comment[]
  RSVPUsers        RSVP[]
  Latitude         Float? // Add latitude field
  Longitude        Float? // Add longitude field
  LocationDisplay  String? // Human-readable address or location name
}

model RSVP {
  users      Users   @relation(fields: [userID], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userID     String
  User_fname String?
  UserEmail  String?
  Userpic     String?
  Pic         String?
  event      Event   @relation(fields: [eventID], references: [id], onDelete: Cascade, onUpdate: Cascade)
  eventID    String

  @@id([userID, eventID])
}

