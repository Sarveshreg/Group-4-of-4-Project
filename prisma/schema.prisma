generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           String    @id @default(uuid())
  FirstName    String
  LastName     String
  Email        String    @unique
  Password     String
  ZipCode      Int
  comment      Comment[]
  EventCreated Event[]   @relation("creator")
  RSVPEvents   RSVP[]
}

model Event {
  id               String    @id @default(uuid())
  Date             DateTime
  Street           String
  City             String
  State            String
  ZipCode          Int
  EventTitle       String
  Details          String
  MaximumAttendies Int
  Picture          String?
  EventCreated     DateTime  @default(now())
  EventUpdated     DateTime  @updatedAt
  CreatorId        String
  category         Category?
  Comment          Comment[]
  Creator          Users     @relation("creator", fields: [CreatorId], references: [id], onDelete: Cascade)
  RSVPUsers        RSVP[]
}

model RSVP {
  userID  String
  eventID String
  event   Event  @relation(fields: [eventID], references: [id])
  users   Users  @relation(fields: [userID], references: [id])

  @@id([userID, eventID])
}

model Category {
  Event_id String         @unique
  Category CategoriesEnum
  event    Event          @relation(fields: [Event_id], references: [id], onDelete: Cascade)

  @@id([Event_id, Category])
}

model Comment {
  id         String   @id @default(uuid())
  Event_id   String
  User_id    String
  Comment    String
  Created_at DateTime @default(now())
  event      Event    @relation(fields: [Event_id], references: [id], onDelete: Cascade)
  user       Users    @relation(fields: [User_id], references: [id], onDelete: Cascade)
}

enum CategoriesEnum {
  ARTS
  SCIENCE
  SPORTS
  TRAVEL
  FOOD
  MUSICS
  RELIGIOUS
  POLITICAL
}
